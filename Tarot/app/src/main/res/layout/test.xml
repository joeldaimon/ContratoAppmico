<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:layout_gravity="center"
    android:background="@color/gray"
    tools:context=".MainActivity">

    <androidx.cardview.widget.CardView
        android:id="@+id/cardView"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:elevation="8dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:padding="10dp"
            android:orientation="horizontal">
            <TextView
                android:layout_width="320dp"
                android:layout_height="wrap_content"
                android:textSize="25dp"
                android:elevation="8dp"
                android:textStyle="bold"
                android:text="Tarot JoelDaimon" />

            <LinearLayout android:id="@+id/lyMenu"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="13dp"
                android:orientation="horizontal">
                <View
                    android:layout_width="10dp"
                    android:layout_height="10dp"
                    android:elevation="2dp"
                    android:layout_marginRight="10dp"
                    android:background="@drawable/myrect"/>
                <View
                    android:layout_width="10dp"
                    android:layout_height="10dp"
                    android:elevation="2dp"
                    android:layout_marginRight="10dp"
                    android:background="@drawable/myrect"/>
                <View
                    android:layout_width="10dp"
                    android:layout_height="10dp"
                    android:elevation="2dp"
                    android:layout_marginRight="10dp"
                    android:background="@drawable/myrect"/>
            </LinearLayout>
        </LinearLayout>
    </androidx.cardview.widget.CardView>

    <LinearLayout android:id="@+id/llFirstRow"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="10dp"
        android:gravity="center"
        app:layout_constraintTop_toBottomOf="@+id/cardView"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent">
        <ImageView android:id="@+id/C1"
            android:layout_width="45dp"
            android:layout_height="95dp"
            android:src="@drawable/carta"/>
        <ImageView android:id="@+id/C2"
            android:layout_width="45dp"
            android:layout_height="95dp"
            android:src="@drawable/carta"/>
        <ImageView android:id="@+id/C3"
            android:layout_width="45dp"
            android:layout_height="95dp"
            android:src="@drawable/carta"/>
        <ImageView android:id="@+id/C4"
            android:layout_width="45dp"
            android:layout_height="95dp"
            android:src="@drawable/carta"/>
        <ImageView android:id="@+id/C5"
            android:layout_width="45dp"
            android:layout_height="95dp"
            android:src="@drawable/carta"/>
        <ImageView android:id="@+id/C6"
            android:layout_width="45dp"
            android:layout_height="95dp"
            android:src="@drawable/carta"/>
        <ImageView android:id="@+id/C7"
            android:layout_width="45dp"
            android:layout_height="95dp"
            android:src="@drawable/carta"/>
        <ImageView android:id="@+id/C8"
            android:layout_width="45dp"
            android:layout_height="95dp"
            android:src="@drawable/carta"/>

    </LinearLayout>

    <LinearLayout android:id="@+id/llSecondRow"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="10dp"
        android:gravity="center"
        app:layout_constraintTop_toBottomOf="@+id/llFirstRow"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent">
        <ImageView android:id="@+id/C9"
            android:layout_width="45dp"
            android:layout_height="95dp"
            android:src="@drawable/carta"/>
        <ImageView android:id="@+id/C10"
            android:layout_width="45dp"
            android:layout_height="95dp"
            android:src="@drawable/carta"/>
        <ImageView android:id="@+id/C11"
            android:layout_width="45dp"
            android:layout_height="95dp"
            android:src="@drawable/carta"/>
        <ImageView android:id="@+id/C12"
            android:layout_width="45dp"
            android:layout_height="95dp"
            android:src="@drawable/carta"/>
        <ImageView android:id="@+id/C13"
            android:layout_width="45dp"
            android:layout_height="95dp"
            android:src="@drawable/carta"/>
        <ImageView android:id="@+id/C14"
            android:layout_width="45dp"
            android:layout_height="95dp"
            android:src="@drawable/carta"/>
        <ImageView android:id="@+id/C15"
            android:layout_width="45dp"
            android:layout_height="95dp"
            android:src="@drawable/carta"/>
        <ImageView android:id="@+id/C16"
            android:layout_width="45dp"
            android:layout_height="95dp"
            android:src="@drawable/carta"/>
    </LinearLayout>

    <LinearLayout android:id="@+id/llThirdRow"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="10dp"
        android:gravity="center"
        app:layout_constraintTop_toBottomOf="@+id/llSecondRow"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent">
        <ImageView android:id="@+id/C17"
            android:layout_width="45dp"
            android:layout_height="95dp"
            android:src="@drawable/carta"/>
        <ImageView android:id="@+id/C18"
            android:layout_width="45dp"
            android:layout_height="95dp"
            android:src="@drawable/carta"/>
        <ImageView android:id="@+id/C19"
            android:layout_width="45dp"
            android:layout_height="95dp"
            android:src="@drawable/carta"/>
        <ImageView android:id="@+id/C20"
            android:layout_width="45dp"
            android:layout_height="95dp"
            android:src="@drawable/carta"/>
        <ImageView android:id="@+id/C21"
            android:layout_width="45dp"
            android:layout_height="95dp"
            android:src="@drawable/carta"/>
        <ImageView android:id="@+id/C22"
            android:layout_width="45dp"
            android:layout_height="95dp"
            android:src="@drawable/carta"/>
    </LinearLayout>



    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        android:orientation="vertical"
        android:gravity="center"
        android:padding="10dp"
        app:layout_constraintTop_toBottomOf="@+id/llThirdRow">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="horizontal">
            <ImageView android:id="@+id/ivOne"
                android:layout_width="100dp"
                android:layout_height="180dp"/>
            <ImageView android:id="@+id/ivTwo"
                android:layout_width="100dp"
                android:layout_height="180dp"/>
            <ImageView android:id="@+id/ivThree"
                android:layout_width="100dp"
                android:layout_height="180dp"/>
        </LinearLayout>
        <TextView android:id="@+id/nombres"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="25dp"
            android:elevation="8dp"
            android:textStyle="bold"
            android:textAlignment="center"
            android:text="Tarot JoelDaimon" />

        <TextView android:id="@+id/datos"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:elevation="8dp"
            android:textStyle="bold"
            android:textAlignment="center"
            android:text="Tarot JoelDaimon" />

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>